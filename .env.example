# Racha Business CRM - Variables d'environnement

# Mode de développement (development, production, test)
NODE_ENV=production

# URL de base de l'application
VITE_APP_BASE_URL=https://racha-business-crm.pages.dev

# Configuration de l'API
VITE_API_BASE_URL=https://api.rachabusiness.com
VITE_API_VERSION=v1

# Configuration de la base de données
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=admin_crm
VITE_DB_USER=your_username
VITE_DB_PASSWORD=your_password

# Clés d'API externes (optionnelles)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_WHATSAPP_BUSINESS_API_KEY=your_whatsapp_api_key_here

# Configuration de l'authentification
VITE_AUTH_TOKEN_EXPIRY=86400000
VITE_AUTH_REFRESH_THRESHOLD=300000

# Configuration des uploads
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Configuration des notifications
VITE_NOTIFICATION_TIMEOUT=5000
VITE_MAX_NOTIFICATIONS=3

# Configuration du cache
VITE_CACHE_DURATION=3600000
VITE_CACHE_MAX_SIZE=50

# Analytics (optionnel)
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_HOTJAR_ID=your_hotjar_id_here

# Sentry pour le monitoring d'erreurs (optionnel)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Configuration de débogage
VITE_DEBUG_MODE=false
VITE_ENABLE_MOCK_DATA=false

# Configuration de l'entreprise (peut être surchargée)
VITE_COMPANY_NAME="Racha Business Group"
VITE_COMPANY_PHONE="+212 6 69 38 28 28"
VITE_COMPANY_EMAIL="contact@rachabusiness.com"

# Configuration PDF
VITE_PDF_LOGO_URL=/logo.png
VITE_PDF_WATERMARK=false

# Configuration des fonctionnalités
VITE_ENABLE_WHATSAPP=true
VITE_ENABLE_SMS=true
VITE_ENABLE_EMAIL=true
VITE_ENABLE_PDF_GENERATION=true
VITE_ENABLE_QR_CODES=true
VITE_ENABLE_ANALYTICS=true

# Configuration de sécurité
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true
